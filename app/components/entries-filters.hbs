<section class="filters">

  <EntriesFilters::User
    @all={{this.allUsers}}
    @selectedIds={{this.selectedUserIds}}
    @onChange={{this.changeSelectedUserIds}}
    class="filter filters__item filters__user"
  />

  <EntriesFilters::Client
    @all={{this.allClients}}
    @selectedIds={{this.selectedClientIds}}
    @onChange={{this.changeSelectedClientIds}}
    class="filter filters__item filters__client"
  />

  <EntriesFilters::Project
    @all={{this.allProjects}}
    @selectedIds={{this.selectedProjectIds}}
    @onChange={{this.changeSelectedProjectIds}}
    class="filter filters__item filters__project"
  />

  <section class="filter filter--calendar filters__item filters__from">
    <div class="filter__label no-print">from</div>
    <div
      class="filter__header"
      {{on "click" this.startEditSince}}
      data-test-filter-since
    >
      <h2 class="filter__title">
        {{moment-format this.since "YYYY/MM/DD"}}
      </h2>
      {{#if this.isEditingSince}}
        <div
          class="filter__calendar no-print"
          {{datepicker this.since this.changeSince}}
          {{on-focus-out-click this.cancelEditSince}}
        ></div>
      {{/if}}
    </div>
  </section>

  <section class="filter filter--calendar filters__item">
    <div class="filter__label no-print">to</div>
    <div
      class="filter__header"
      {{on "click" this.startEditBefore}}
      data-test-filter-before
    >
      <h2 class="filter__title">
        {{moment-format this.before "YYYY/MM/DD"}}
      </h2>
      {{#if this.isEditingBefore}}
        <div
          class="filter__calendar no-print"
          {{datepicker this.before this.changeBefore}}
          {{on-focus-out-click this.cancelEditBefore}}
        ></div>
      {{/if}}
    </div>
  </section>

  {{#if this.canRound}}
    <section class="filter filter--checkbox filters__item no-print">
      <label class="filter__inner">
        <input
          {{on "change" this.changeRounding}}
          type="checkbox"
          checked={{this.rounding}}
          class="filter__checkbox"
          data-test-rounding
        />
        <span>Round</span>
      </label>
    </section>
  {{/if}}

  {{yield}}
</section>

<section class="filters">
  <section class="filter filter--search-bar filters__item filter__query">
    {{#if this.query}}
      <span class="only-print">
        Search :
        {{this.query}}
      </span>
    {{/if}}
    <input
      value={{this.query}}
      {{on "change" this.changeQuery}}
      placeholder="Search tasks ..."
      class="filter__input no-print"
      data-test-filter-query
    />
  </section>
</section>
