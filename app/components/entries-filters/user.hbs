<section
  class="filter filter--list print@filter print@filter--list
    {{if this.allAreInitiallySelected 'print@hidden'}}"
  {{on-mouse-leave this.triggerChanges}}
  data-test-filter-user-container
  ...attributes
>
  <div class="filter__header">
    <h2 class="filter__title print@filter__title">Users</h2>
    <div
      class="filter__count print@hidden"
    >({{this.selectedIds.length}}/{{this.all.length}})</div>
  </div>
  <div class="filter__list-container">
    <ul class="filter__list">
      <li class="filter__toggle-bar print@hidden">
        <button type="button" class="filter__toggle-button" {{on "click" this.checkAll}}>
          Select all
        </button>
        <button type="button" class="filter__toggle-button" {{on "click" this.uncheckAll}}>
          Select none
        </button>
      </li>
      {{#each this.all as |user|}}
        <li
          class="filter__item
            {{if (not (includes user.id this.selectedIds)) 'print@hidden'}}"
        >
          <label class="filter__item-content">
            <input
              {{on "change" (fn this.changeSelection user.id)}}
              type="checkbox"
              class="filter__item-checkbox print@hidden"
              checked={{includes user.id this.selectedIds}}
              data-test-filter-user="{{user.id}}"
            />
            <span>{{user.name}}</span>
          </label>
        </li>
      {{/each}}
    </ul>
  </div>
</section>
