<label
  for="{{concat 'password-' @user.id}}"
  class="touch login-item-label"
  data-test-user-name
>
  @
  {{@user.name}}
</label>
<Input
  @type="password"
  id={{concat "password-" @user.id}}
  @enter={{fn @onSubmit @user.id}}
  {{on "keyup" (fn @keyup @user.id)}}
  class="touch login-item-password"
  data-test-password
/>