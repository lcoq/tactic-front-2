<div
  class="notifs-list print@hidden"
  data-test-notifications-list
  {{on-focus-out-click @close}}
>
  <div class="notifs-list__header">
    <div class="notifs-list__header-title">Notifications</div>
    <button
      {{on "click" @close}}
      type="button"
      class="notifs-list__header-close"
      data-test-notifications-close
    >Ã—</button>
  </div>
  {{#if this.hasNotification}}
    <ul class="notifs-list__list">
      {{#each this.notifications as |notif|}}
        <Notification
          @notif={{notif}}
          @deleteNotification={{@deleteNotification}}
          @onResourceClick={{@onResourceClick}}
        />
      {{/each}}
    </ul>
  {{else}}
    <p class="notifs-list__empty" data-test-notifications-empty>
      No notification yet.
      <i class="notifs-list__empty-sub">Yay, you can focus on your work in the most
        productive way !</i>
    </p>
  {{/if}}
</div>
