<section
  class="client {{this.classNames}}"
  data-test-client="{{or this.client.id '-1'}}"
  {{this.onFocusOutClickModifier this.closeEdit}}
>

  <div class="client__actions">
    {{#if this.isErrored}}
      <button
        type="button"
        {{on "click" this.retrySaveOrDelete}}
        class="client__action client__action--retry"
        data-test-client-retry
      >
        Retry
      </button>
    {{/if}}
    {{#if this.isInvalid}}
      <button
        type="button"
        {{on "click" this.startEdit}}
        class="client__action client__action--edit-invalid"
        data-test-client-edit-invalid
      >
        Edit
      </button>
    {{/if}}
    {{#if this.canRevert}}
      <button
        type="button"
        {{on "click" this.revertEdit}}
        class="client__action client__action--revert"
        data-test-client-edit-rollback
      >
        Revert
      </button>
    {{/if}}
    {{#if this.isClear}}
      <button
        type="button"
        {{on "click" this.markForDelete}}
        class="client__action client__action--delete"
        data-test-client-delete
      >
        Delete
      </button>
    {{/if}}
  </div>

  {{#if this.isEditing}}
    <h2 class="client__title">
      <Input
        @value={{this.client.name}}
        class="client__title-input"
        @enter={{this.closeEdit}}
        {{select-on-focus}}
        {{focus-if true}}
        data-test-client-edit-name
      />
    </h2>
  {{else}}
    <h2 {{on "click" this.startEdit}} class="client__title">
      <span
        class="client__title-txt"
        data-test-client-name
      >{{this.client.name}}</span>
    </h2>
  {{/if}}

</section>